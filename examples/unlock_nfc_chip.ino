#include <Arduino.h>
#include <nfc_dynamic_tag.h>
#include <Wire.h>

NXP_NTAG_I2C ntag(0x55);

void setup()
{
  Serial.begin(115200);
  Wire.begin();
  ntag.begin();
  ntag.CleanData();
}

void loop()
{
  uint8_t unlock[]={0xAA,0x04,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x44,0x00,0x00,0xE1,0x10,0x6D,0x00}; //for 1k version. 0xAA is a 7 bit address of 0x55
  //uint8_t unlock[]={0xAA,0x04,0x00,0x00,0x00,0x00,0x00,0x00,0x00,0x44,0x00,0x00,0xE1,0x10,0xEA,0x00}; //for 2k version. 0xAA is a 7 bit address of 0x55
  ntag.WriteDataBlock(0,unlock,16);
  Serial.print("Succeed! Please do format!");
  delay(60000);
}
